<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginBottom="2dp"
    android:background="@android:color/white">


    <FrameLayout
        android:id="@+id/imgLayout"
        android:layout_width="180dp"
        android:layout_margin="5dp"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/imvUserPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"


            app:srcCompat="@drawable/photo_placeholder" />

        <LinearLayout
            android:layout_width="100dp"

            android:layout_height="100dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="-40dp"
            android:background="@drawable/semicircle"
            android:textAlignment="center">

            <TextView
                android:id="@+id/txvUserRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginBottom="5dp"
                android:text="242"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLayout"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/txvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:maxLines="1"

            android:ellipsize="end"
            android:text="Rekha Nagpal Singh" />

        <TextView
            android:id="@+id/txvUserAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="24" />

    </RelativeLayout>
</RelativeLayout>
