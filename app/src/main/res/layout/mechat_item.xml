<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentRight="true"
    android:layout_marginTop="2dp"
    android:gravity="right">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imv_ProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@drawable/circular"
        android:src="@drawable/person"
        android:visibility="visible" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="80dp"
        app:cardElevation="5dp"
        android:layout_toLeftOf="@id/imv_ProfileImage">

        <LinearLayout
            android:id="@+id/outgoing_layout_bubble"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                style="@style/chat_timings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="2dp"
                android:padding="2dp"
                android:text="djdjdjjddjjdj"
                android:visibility="gone" />

            <TextView
                android:id="@+id/msgtxt_id"
                style="@style/chat_text_message_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:autoLink="web"
                android:text="dkkdkdkdkkdkdkd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_id"
                    style="@style/chat_timings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="Tue- 09:34AM" />

                <ImageView
                    android:id="@+id/user_reply_status"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/message_sending" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
